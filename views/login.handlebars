      <button type="submit" class="join-singin-button pure-button pure-button-primary">Log in</button>
    </fieldset>
  </form>

  <figure class="pure-u-md-3-5 pure-u-lg-1-2">
    <img id="sigin-img" src="assets/cooking-food.jpg" alt="Steaming pot on stove">
  </figure>
</section>


